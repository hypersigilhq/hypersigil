{
  "name": "@prompt-bench/shared",
  "version": "1.0.0",
  "description": "Shared API definitions and types for prompt-bench",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "sync": "npm run build && cd ../backend && npm install && cd ../ui && npm install"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "dependencies": {
    "ts-typed-api": "^0.1.7"
  }
}
